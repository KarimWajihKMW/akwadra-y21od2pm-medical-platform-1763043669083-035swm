# Database Configuration
# REQUIRED for database features (will be provided by Railway when you add a database)
DATABASE_URL="postgresql://user:password@localhost:5432/zakerly?schema=public"

# For direct database connections (required for migrations with connection pooling)
# OPTIONAL - only needed if using connection pooling (e.g., PgBouncer)
DIRECT_URL="postgresql://user:password@localhost:5432/zakerly?schema=public"

# Authentication
# REQUIRED for authentication to work
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"

# Application URL
# REQUIRED for authentication redirects and API calls
APP_URL="http://localhost:3000"
NEXTAUTH_URL="http://localhost:3000"

# OpenAI API Key (for AI features)
# OPTIONAL - only needed if using AI text-to-speech and assistant features
OPENAI_API_KEY="sk-your-openai-api-key-here"

# File Upload Configuration
# OPTIONAL - defaults provided
MAX_FILE_SIZE="10485760" # 10MB in bytes
UPLOAD_DIR="./uploads"

# Node Environment
NODE_ENV="development"
